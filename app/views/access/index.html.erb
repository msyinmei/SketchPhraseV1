  <div class="row">
    <div class="fixed-bottom col-xs-12">
      <div class="col-xs-offset-2 col-xs-8">
        <%= form_tag games_path, method: "post" do %>
        <button type="button" class="plus-minus" id="morePlayers">
          <span>+</span>
        </button>
        <h3 { color: rgba(255, 255, 255, 0.9) !important }><%= text_field_tag :players_count, 5, :readonly => true %>
        <%= label_tag :players_count, "Players" %></h3>
        <button type="button" class="plus-minus" id="lessPlayers">
          <span>-</span>
        </button>
        <!-- class="glyphicon glyphicon-plus" -->
      </div>
      <div class="col-xs-offset-1 col-xs-10 col-sm-offset-4 col-sm-4">
          <%= submit_tag "START", class: "button" %>
        <% end %>

        <%= link_to "SIGN OUT", logout_path, class: "button" %>
      </div>
    </div>
  </div>
<% else %>

<!--  CH else CH -->
<!-- NOT SIGNED IN, this button will appear -->

  <div class="fixed-bottom col-xs-12">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-4 col-sm-4">
      <%= link_to "SIGN IN", "/auth/facebook", class: "button" %>
    </div>
  </div>

<% end %>
